{
  "name": "jarvis",
  "version": "1.0.0",
  "private": true,
  "description": "Personal AI assistant app - Your personal Jarvis",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "build:web": "npm run build --workspace=apps/web",
    "build:mobile": "npm run build --workspace=apps/mobile",
    "build:shared": "npm run build --workspace=packages/shared",
    "postinstall": "npm run build:shared",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}

